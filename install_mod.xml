<script type="text/javascript">
//]]>&lt;![CDATA[<![CDATA[
var xmlhttp
var xmlhttp2
var xmlhttp3
var xmlhttp4

function reload_liul()
{
  xmlhttp=GetXmlHttpObject();
  if (xmlhttp==null)
  {
    return;
  }
  xmlhttp.onreadystatechange=function()
  {
    if (xmlhttp.readyState==4)
    {
      document.getElementById('logged_in_user_list').innerHTML=xmlhttp.responseText;
    }
  }
  xmlhttp.open('GET', 'ajax_base.php?mode=liul', true);
  xmlhttp.send(null);

  setTimeout('reload_liul()', 15000);
}

function reload_stats()
{
  xmlhttp2=GetXmlHttpObject();
  if (xmlhttp2==null)
  {
    return;
  }
  xmlhttp2.onreadystatechange=function()
  {
    if (xmlhttp2.readyState==4)
    {
      document.getElementById('statistics_ajax_div').innerHTML=xmlhttp2.responseText;
    }
  }
  xmlhttp2.open('GET', 'ajax_base.php?mode=stats', true);
  xmlhttp2.send(null);
  setTimeout('reload_stats()', 15000);
}

function reload_totals()
{
  xmlhttp3=GetXmlHttpObject();
  if (xmlhttp3==null)
  {
    return;
  }
  xmlhttp3.onreadystatechange=function()
  {
    if (xmlhttp3.readyState==4)
    {
      document.getElementById('totals_ajax_div').innerHTML=xmlhttp3.responseText;
    }
  }
  xmlhttp3.open('GET', 'ajax_base.php?mode=total', true);
  xmlhttp3.send(null);
  setTimeout('reload_totals()', 15000);
}

function reload_record()
{
  xmlhttp4=GetXmlHttpObject();
  if (xmlhttp4==null)
  {
    return;
  }
  xmlhttp4.onreadystatechange=function()
  {
    if (xmlhttp4.readyState==4)
    {
      document.getElementById('record_ajax_div').innerHTML=xmlhttp4.responseText;
    }
  }
  xmlhttp4.open('GET', 'ajax_base.php?mode=record', true);
  xmlhttp4.send(null);
  setTimeout('reload_record()', 15000);
}

function GetXmlHttpObject()
{
  if (window.XMLHttpRequest)
  {
    return new XMLHttpRequest();
  }
  if (window.ActiveXObject)
  {
    return new ActiveXObject("Microsoft.XMLHTTP");
  }
  return null;
}

setTimeout('reload_liul()', 15000);
setTimeout('reload_stats()', 15000);
setTimeout('reload_totals()', 15000);
setTimeout('reload_record', 15000);
